<script src="~/js/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('#buttonDemo1').click(function () {
            $.ajax({
                type: 'GET',
                url: '/ajax/demo1',
                success: function (data) {
                    $('#result1').html(data);
                }
            })
        });
        $('#buttonDemo2').click(function () {
            $.ajax({
                type: 'GET',
                url: '/ajax/demo2',
                success: function (data) {
                    $('#result2').html(data);
                }
            })
        });
        $('#buttonDemo3').click(function () {
            var fullname = $('#fullname').val();
            $.ajax({
                type: 'GET',
                url: '/ajax/demo3',
                data: {
                    name : fullname
                },
                success: function (data) {
                    $('#result3').html(data);
                }
            })
        });
        $('#buttonDemo4').click(function () {
            var fullname = $('#fullname2').val();
            $.ajax({
                type: 'POST',
                url: '/ajax/demo4',
                data: {
                    name: fullname
                },
                success: function (data) {
                    $('#result4').html(data);
                }
            })
        });
        $('#buttonDemo5').click(function () {
           
            $.ajax({
                type: 'GET',
                url: '/ajax/demo5',
                dataType: 'json',
                contentType:'application/json',
                success: function (product) {
                    var result = 'Id: '+ product.id;
                result += '<br>Name: ' +product.name;
                result += '<br>Price: ' +product.price;
                    $('#result5').html(result);
                }
            })
        });
        $('#buttonDemo6').click(function () {

            $.ajax({
                type: 'GET',
                url: '/ajax/demo6',
                dataType: 'json',
                contentType: 'application/json',
                success: function (products) {
                    var result = '';
                    for (var i = 0; i < products.length; i++) {
                        result += '<br>Id: ' + products[i].id;
                        result += '<br>Name: ' + products[i].name;
                        result += '<br>Price: ' + products[i].price;
                        result += '<br>-----------';
                    
                    }
                    $('#result6').html(result);
                }
            })
        });
    }
    );
</script>
